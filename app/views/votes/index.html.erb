<h1 class="centered mt-3">Making Playlist</h1>

<%= render "shared/casset" %>

<div class="col-xs-1 text-center">
  <div class="qr" data-controller="qr">
    <input data-action="click->qr#hide" data-qr-target="button" type="button" value="Show QR" id="button-qr"/>
    <div class="qr-code-image d-none" data-qr-target="image">
      <img  id="qr" src<%= @svg.html_safe %>
    </div>
  </div>
</div>

<h1 class="playlist"><%= @playlist.name %></h1>

<h2 class="centered">Share this link to vote <strong><%= "localhost:3000/playlists/#{@playlist.id}" %></strong></h2>

<% @songs_votes.each_with_index do |song, i| %>
  <div class="card-product">
    <img src= "<%= song.image %>"/>
      <div class="card-product-infos">
        <h2><%= song.name %></h2>
        <p><%= song.artist %></p>
        <p>Votes :
          <%= @songs_votes[i].votes[0]&.votes - 1 %>
        </p>
      </div>
  </div>
<% end %>
